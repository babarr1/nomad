<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_friends"
    android:padding="16dp">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/icon_back"
        android:contentDescription="Back" />

    <!-- Network Status Indicator -->
    <TextView
        android:id="@+id/networkStatusIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:paddingHorizontal="12dp"
        android:paddingVertical="4dp"
        android:background="@drawable/icon_box"
        android:text="Offline"
        android:textColor="#1F1F0F"
        android:textSize="12sp"
        android:fontFamily="sans-serif-medium"
        android:visibility="gone" />

    <!-- Notification Banner -->
    <TextView
        android:id="@+id/friendBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/backBtn"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="6dp"
        android:background="@drawable/icon_box"
        android:text="Find and connect with friends!"
        android:textColor="#1F1F0F"
        android:textSize="14sp"
        android:fontFamily="sans-serif-medium"
        android:visibility="gone" />

    <!-- Search Bar -->
    <LinearLayout
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/friendBanner"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#1E2232"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginHorizontal="20dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_search"
            android:layout_marginEnd="8dp"
            app:tint="#D6C84E" />

        <EditText
            android:id="@+id/searchInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search users..."
            android:textColorHint="#D6C84E"
            android:textColor="#D6C84E"
            android:background="@null"
            android:padding="4dp"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- User List Section with RecyclerView -->
    <LinearLayout
        android:id="@+id/userListContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/searchBar"
        android:layout_above="@id/bottomNav"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:background="@drawable/friend_card_bg"
        android:padding="16dp">

        <!-- Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/sectionTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="All Users"
                android:textColor="#D6C84E"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/resultCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#9CA3AF"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- RecyclerView for Users -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/friendsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="vertical" />

        <!-- Empty State Text -->
        <TextView
            android:id="@+id/emptyStateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start typing to search for users"
            android:textColor="#D6C84E"
            android:textSize="14sp"
            android:gravity="center"
            android:padding="20dp"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp">

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_margin="8dp"
            android:background="@drawable/icon_box"
            android:padding="8dp"
            android:src="@drawable/icon_nav1" />

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_margin="8dp"
            android:background="@drawable/icon_box"
            android:padding="8dp"
            android:src="@drawable/icon_nav2" />

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_margin="8dp"
            android:background="@drawable/icon_box"
            android:padding="8dp"
            android:src="@drawable/icon_nav3" />

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_margin="8dp"
            android:background="@drawable/icon_box"
            android:padding="8dp"
            android:src="@drawable/icon_nav4" />
    </LinearLayout>

</RelativeLayout>