<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_friends"
    android:padding="16dp">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/icon_back"
        android:contentDescription="Back" />

    <!-- Notification Banner -->
    <TextView
        android:id="@+id/friendBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="4dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="6dp"
        android:background="@drawable/icon_box"
        android:text="You and Anka are now friends!"
        android:textColor="#1F1F0F"
        android:textSize="14sp"
        android:fontFamily="sans-serif-medium" />

    <!-- Search Bar -->
    <LinearLayout
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/friendBanner"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#1E2232"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginHorizontal="20dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_search"
            android:layout_marginEnd="8dp"
            app:tint="#D6C84E" />

        <EditText
            android:id="@+id/searchInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search"
            android:textColorHint="#D6C84E"
            android:textColor="#D6C84E"
            android:background="@null"
            android:padding="4dp"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Friend List Section -->
    <LinearLayout
        android:id="@+id/friendList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchBar"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical"
        android:background="@drawable/friend_card_bg"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recent"
            android:textColor="#D6C84E"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="12dp" />

        <!-- Friend 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/friend1"
                android:scaleType="centerCrop"
                android:background="@drawable/icon_box"
                android:padding="3dp"
                android:clipToOutline="true" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:text="Anka Rizwan"
                android:textColor="#D6C84E"
                android:textSize="15sp"
                android:fontFamily="sans-serif-medium"
                android:shadowColor="#BF9D2F"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="2" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_delete"
                app:tint="#D6C84E" />
        </LinearLayout>

        <!-- Friend 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/friend2"
                android:scaleType="centerCrop"
                android:background="@drawable/icon_box"
                android:padding="3dp"
                android:clipToOutline="true" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:text="Saboor Akram"
                android:textColor="#D6C84E"
                android:textSize="15sp"
                android:fontFamily="sans-serif-medium"
                android:shadowColor="#BF9D2F"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="2" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_delete"
                app:tint="#D6C84E" />
        </LinearLayout>

        <!-- Friend 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/friend3"
                android:scaleType="centerCrop"
                android:background="@drawable/icon_box"
                android:padding="3dp"
                android:clipToOutline="true" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:text="Nida Rehman"
                android:textColor="#D6C84E"
                android:textSize="15sp"
                android:fontFamily="sans-serif-medium"
                android:shadowColor="#BF9D2F"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="2" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_delete"
                app:tint="#D6C84E" />
        </LinearLayout>
    </LinearLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp">

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_margin="8dp"
            android:background="@drawable/icon_box"
            android:padding="8dp"
            android:src="@drawable/icon_nav1" />

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_margin="8dp"
            android:background="@drawable/icon_box"
            android:padding="8dp"
            android:src="@drawable/icon_nav2" />

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_margin="8dp"
            android:background="@drawable/icon_box"
            android:padding="8dp"
            android:src="@drawable/icon_nav3" />

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_margin="8dp"
            android:background="@drawable/icon_box"
            android:padding="8dp"
            android:src="@drawable/icon_nav4" />
    </LinearLayout>

</RelativeLayout>
