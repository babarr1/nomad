<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_capture">

    <!-- Close Button (Top Left) -->
    <ImageView
        android:id="@+id/closeBtn"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="12dp"
        android:src="@drawable/icon_close"
        android:padding="6dp"
        android:contentDescription="Close" />

    <!-- Gesture Icon (Right Side) -->
    <ImageView
        android:id="@+id/gestureIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:src="@drawable/icon_hand"
        android:padding="6dp"
        android:contentDescription="Gesture Icon" />

    <!-- Capture Button (Bottom Center) -->
    <ImageView
        android:id="@+id/captureBtn"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:src="@drawable/icon_capture"
        android:contentDescription="Capture Button" />

    <!-- Add Photo Button (Bottom Left) -->
    <ImageView
        android:id="@+id/addPhotoBtn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="55dp"
        android:src="@drawable/icon_add"
        android:padding="6dp"
        android:contentDescription="Add Photo" />

</RelativeLayout>
